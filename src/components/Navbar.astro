<nav class="p-1 z-30 hidden md:block">
    <div class="flex justify-between flex-row m-3 p-3 rounded-2xl navbar-back">
        <div class="p-1">
            Saba Sen
        </div>
        <div>
            <div class="hidden md:block">
                {
                    navLinks.map((navLink)=> {
                        return (
